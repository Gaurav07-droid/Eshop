header.header 
    nav.nav.nav--tours
    .header__logo
        a(href="/categories")
            img.logo(src="/img/Logoname.png")
        form.formSearch(action="/categories")
            input.input-search(type="text", placeholder="Search product here....", name="search")
            button.btnSearch(type="submit") search    
    nav.nav.nav--user
        if user
            btn.nav__el.nav__el--logout#log-out Log out
            a.nav__el(href='/my-account')
                //- img.nav__user-img(src=`/img/users/${user.profileImage}` alt=`${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/user/login') Log in
            a.nav__el.nav__el--cta(href='/user/signup') Create Account